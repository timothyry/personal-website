        -else
          - mole = Miner.new 
          - mole.load('./lib/posts.yml')
          - post = mole.pop
          - if post
            img.preview(src='#{post[1]}')
            p.name #{post[0]}
            <hr>
            = post[2]
            <br>
            p.preview_date #{post[3].strftime("via twitter on %m/%d/%Y")}
